<!DOCTYPE html>
<html>
<head>
	<title>	Movie App </title>
	<% include head %>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

	<% include navbar %>

	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<div class="w3-container">
					<div class="w3-panel w3-dark-grey w3-card-4">
						<h1 class="text-white text-center text-uppercase" id="mbugua">Movies&nbsp; Now &nbsp; Playing</h1>
					</div>
				</div>
				
				<hr>
			</div>
			<div class="col-sm-12">
				<!--We have an array called parsedData -->
				<% parsedData.forEach((movie)=> { %>

					<% if( movie.poster_path == null){ %>

						<div class="col-md-3 col-sm-4 poster">
							<a href="/movie/<%=movie.id%>"><img src="/images/not-available.jpg" style="min-height: 400px; max-height: 400px;"></a>
						</div>
						
					<%}else{ %>

						<div class="col-md-3 col-sm-4 poster">
							<a href="/movie/<%=movie.id%>"><img src="<%= imageBaseUrl + movie.poster_path %>" style="min-height: 400px; max-height: 400px;"></a>
						</div>
					<%}
				}); %>
				
			</div>
		</div>
	</div>

	
</body>
</html>